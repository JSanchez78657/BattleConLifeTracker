<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/LargeParentConstraintLayout"
        android:background="@color/end_beat_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".layouts.MainActivity">
    <!-- Guide lines -->
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/TopOfBeatZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".475"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/BottomOfBeatZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".525"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/P1VerticalMiddleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".55"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/P2VerticalMiddleLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".4"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/P1AnteLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".575"/>
    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/P2AnteLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".425"/>
    <!-- P2 Finisher button -->
    <ImageButton
            android:id="@+id/P2FinisherButton"
            android:rotation="180"
            android:background="@color/finisher_red"
            android:src="@drawable/explosion"
            android:scaleType="fitCenter"
            android:contentDescription="@string/finisher"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/P2AnteLine"
            app:layout_constraintBottom_toTopOf="@id/TopOfBeatZone"
            app:layout_constraintStart_toEndOf="@id/P2VerticalMiddleLine"
            app:layout_constraintEnd_toEndOf="parent"/>
    <!-- P2 Life zone -->
    <TextView
            android:id="@+id/P2LifeTotal"
            android:rotation="180"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_font"
            android:textColor="@color/text_white"
            android:elevation="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/TopOfBeatZone"
            app:layout_constraintStart_toEndOf="@id/P2VerticalMiddleLine"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:id="@+id/P2GainLife"
            android:background="@color/life_point_red"
            android:contentDescription="@string/gain_life"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/P2LoseLife"
            app:layout_constraintBottom_toTopOf="@id/TopOfBeatZone"
            app:layout_constraintStart_toEndOf="@id/P2VerticalMiddleLine"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:id="@+id/P2LoseLife"
            android:background="@color/life_point_red"
            android:contentDescription="@string/gain_life"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/P2GainLife"
            app:layout_constraintStart_toEndOf="@id/P2VerticalMiddleLine"
            app:layout_constraintEnd_toEndOf="parent"/>
    <!-- P2 Overload actions zone-->
    <ImageButton
            android:id="@+id/P2PowerAnteButton"
            android:rotation="180"
            android:contentDescription="@string/ante_power"
            android:background="@color/ante_overload_green"
            android:src="@drawable/sword"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/P2AnteLine"
            app:layout_constraintBottom_toTopOf="@id/TopOfBeatZone"
            app:layout_constraintStart_toEndOf="@id/P2GuardAnteButton"
            app:layout_constraintEnd_toStartOf="@id/P2VerticalMiddleLine"/>
    <ImageButton
            android:id="@+id/P2GuardAnteButton"
            android:rotation="180"
            android:contentDescription="@string/ante_guard"
            android:background="@color/ante_overload_green"
            android:src="@drawable/shield"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/P2AnteLine"
            app:layout_constraintBottom_toTopOf="@id/TopOfBeatZone"
            app:layout_constraintStart_toEndOf="@id/P2PrioAnteButton"
            app:layout_constraintEnd_toStartOf="@id/P2PowerAnteButton"/>
    <ImageButton
            android:id="@+id/P2PrioAnteButton"
            android:rotation="180"
            android:contentDescription="@string/ante_prio"
            android:background="@color/ante_overload_green"
            android:src="@drawable/lightning"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/P2AnteLine"
            app:layout_constraintBottom_toTopOf="@id/TopOfBeatZone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/P2GuardAnteButton"/>
    <!-- P2 Force zone -->
    <TextView
            android:id="@+id/P2ForceTotal"
            android:rotation="180"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_font"
            android:textColor="@color/text_white"
            android:elevation="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/TopOfBeatZone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/P2VerticalMiddleLine"/>
    <ImageButton
            android:id="@+id/P2GainForce"
            android:background="@color/force_point_green"
            android:contentDescription="@string/gain_force"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/P2LoseForce"
            app:layout_constraintBottom_toTopOf="@id/TopOfBeatZone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/P2VerticalMiddleLine"/>
    <ImageButton
            android:id="@+id/P2LoseForce"
            android:background="@color/force_point_green"
            android:contentDescription="@string/lose_force"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/P2GainForce"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/P2VerticalMiddleLine"/>
    <!-- Beat zone -->
    <TextView
            android:id="@+id/P2RemainingForce"
            android:rotation="180"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="@dimen/med_font"
            android:textColor="@color/text_white"
            android:elevation="100dp"
            app:layout_constraintTop_toBottomOf="@id/TopOfBeatZone"
            app:layout_constraintBottom_toTopOf="@id/BottomOfBeatZone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/P2VerticalMiddleLine"/>
    <ImageButton
            android:id="@+id/EndBeatButton"
            android:contentDescription="@string/end_beat"
            android:src="@drawable/stopwatch"
            android:scaleType="fitCenter"
            android:textSize="15sp"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/TopOfBeatZone"
            app:layout_constraintBottom_toTopOf="@id/BottomOfBeatZone"
            app:layout_constraintStart_toEndOf="@id/P2VerticalMiddleLine"
            app:layout_constraintEnd_toStartOf="@id/P1VerticalMiddleLine"/>
    <TextView
            android:id="@+id/P1RemainingForce"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="@dimen/med_font"
            android:textColor="@color/text_white"
            android:elevation="100dp"
            app:layout_constraintTop_toBottomOf="@id/TopOfBeatZone"
            app:layout_constraintBottom_toTopOf="@id/BottomOfBeatZone"
            app:layout_constraintStart_toEndOf="@id/P1VerticalMiddleLine"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:id="@+id/MenuButton"
            android:contentDescription="@string/open_menu"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:src="@drawable/gear"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            app:layout_constraintTop_toBottomOf="@id/TopOfBeatZone"
            app:layout_constraintBottom_toTopOf="@id/BottomOfBeatZone"
            app:layout_constraintEnd_toEndOf="parent"/>
    <!-- P1 Finisher button -->
    <ImageButton
            android:id="@+id/P1FinisherButton"
            android:background="@color/finisher_red"
            android:src="@drawable/explosion"
            android:scaleType="fitCenter"
            android:contentDescription="@string/finisher"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/BottomOfBeatZone"
            app:layout_constraintBottom_toTopOf="@id/P1AnteLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/P1VerticalMiddleLine"/>
    <!-- P1 Life zone -->
    <TextView
            android:id="@+id/P1LifeTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/big_font"
            android:textColor="@color/text_white"
            android:elevation="100dp"
            app:layout_constraintTop_toBottomOf="@id/BottomOfBeatZone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/P1VerticalMiddleLine"/>
    <ImageButton
            android:id="@+id/P1GainLife"
            android:background="@color/life_point_red"
            android:contentDescription="@string/gain_life"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/BottomOfBeatZone"
            app:layout_constraintBottom_toTopOf="@id/P1LoseLife"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/P1VerticalMiddleLine"/>
    <ImageButton
            android:id="@+id/P1LoseLife"
            android:background="@color/life_point_red"
            android:contentDescription="@string/gain_life"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/P1GainLife"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/P1VerticalMiddleLine"/>
    <!-- P1 Overload action zone -->
    <ImageButton
            android:id="@+id/P1PowerAnteButton"
            android:contentDescription="@string/ante_power"
            android:background="@color/ante_overload_green"
            android:src="@drawable/sword"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/BottomOfBeatZone"
            app:layout_constraintBottom_toTopOf="@id/P1AnteLine"
            app:layout_constraintStart_toStartOf="@id/P1VerticalMiddleLine"
            app:layout_constraintEnd_toStartOf="@id/P1GuardAnteButton"/>
    <ImageButton
            android:id="@+id/P1GuardAnteButton"
            android:contentDescription="@string/ante_guard"
            android:background="@color/ante_overload_green"
            android:src="@drawable/shield"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/BottomOfBeatZone"
            app:layout_constraintBottom_toTopOf="@id/P1AnteLine"
            app:layout_constraintStart_toEndOf="@id/P1PowerAnteButton"
            app:layout_constraintEnd_toStartOf="@id/P1PrioAnteButton"/>
    <ImageButton
            android:id="@+id/P1PrioAnteButton"
            android:contentDescription="@string/ante_prio"
            android:background="@color/ante_overload_green"
            android:src="@drawable/lightning"
            android:scaleType="fitCenter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/BottomOfBeatZone"
            app:layout_constraintBottom_toTopOf="@id/P1AnteLine"
            app:layout_constraintStart_toEndOf="@id/P1GuardAnteButton"
            app:layout_constraintEnd_toEndOf="parent"/>
    <!-- P1 Force Zone -->
    <TextView
            android:id="@+id/P1ForceTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="100sp"
            android:textColor="@color/text_white"
            android:elevation="@dimen/big_font"
            app:layout_constraintTop_toBottomOf="@id/BottomOfBeatZone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/P1VerticalMiddleLine"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:id="@+id/P1GainForce"
            android:contentDescription="@string/gain_force"
            android:background="@color/force_point_green"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/BottomOfBeatZone"
            app:layout_constraintBottom_toTopOf="@id/P1LoseForce"
            app:layout_constraintStart_toEndOf="@id/P1VerticalMiddleLine"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
            android:id="@+id/P1LoseForce"
            android:contentDescription="@string/lose_force"
            android:background="@color/force_point_green"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/P1GainForce"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/P1VerticalMiddleLine"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>